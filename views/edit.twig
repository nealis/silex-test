<html>
<head>
    <title>Prova Silex 2019</title>
</head>
<body>
<h1>Modifica Libro</h1>
<div>

    {% if libro %}
    <form action="/modifica" method="post">
        <input name="id" hidden value = '{{ libro.id }}'>
        Titolo
        <input name="titolo" type="text" value = '{{ libro.title }}'>
        Autore
        <input name="autore" type="text" value = '{{ libro.author }}'>
        Prezzo
        <input name="prezzo" type="text" value = '{{ libro.price }}'>

        <button type="submit">Salva</button>
    </form>
    {% else %}
    <form action="/insert" method="post">
        Titolo
        <input name="titolo" type="text">
        Autore
        <input name="autore" type="text">
        Prezzo
        <input name="prezzo" type="text">

        <button type="submit">Salva</button>
    </form>
    {% endif %}
</div>
</body>
</html>